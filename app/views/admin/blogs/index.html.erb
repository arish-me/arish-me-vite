<!-- app/views/admin/blogs/index.html.erb -->
<div class="container mx-auto p-6">
  <h1 class="text-2xl font-bold mb-4">Blogs</h1>

  <%= link_to 'New Blog', new_admin_blog_path, class: 'inline-block bg-black hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded mb-6' %>

  <div class="overflow-x-auto bg-white shadow-md rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Author</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @blogs.each do |blog| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= blog.title %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= blog.author_name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <%= link_to 'Edit', edit_admin_blog_path(blog), class: 'text-blue-600 hover:text-blue-800 mr-4' %>
              <%= link_to 'Delete', admin_blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-800' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
